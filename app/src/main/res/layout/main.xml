<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Top">


    <TextView
        android:id="@+id/Title01"
        android:layout_width="251dp"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/toggleButton"
        android:layout_alignParentStart="true"
        android:text="URLの入力"
        android:textSize="20sp" />

    <EditText
        android:id="@+id/urlEditText"
        android:layout_width="248dp"
        android:layout_height="76dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="66dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="main" />

    <EditText
        android:id="@+id/urlEditText2"
        android:layout_width="248dp"
        android:layout_height="71dp"
        android:layout_alignParentStart="true"
        android:layout_alignTop="@+id/startButton"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="FileName" />

    <Button
        android:id="@+id/startButton"
        android:layout_width="wrap_content"
        android:layout_height="72dp"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/urlEditText"
        android:onClick="onClick"
        android:text="ダウンロード開始"
        android:textSize="13sp" />

    <Button
        android:id="@+id/ViewImageButton"
        android:layout_width="126dp"
        android:layout_height="72dp"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/urlEditText"
        android:onClick="onClick"
        android:text="画像を描画"
        android:textSize="20sp" />

    <ImageView
        android:id="@+id/ImageViewer"
        android:layout_width="match_parent"
        android:layout_height="393dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="215dp" />

    <ToggleButton
        android:id="@+id/toggleButton"
        android:layout_width="127dp"
        android:layout_height="65dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:textOff="外部読み込み" />

    <Spinner
        android:id="@+id/spinner"
        android:layout_width="249dp"
        android:layout_height="72dp"
        android:layout_alignParentStart="true"
        android:layout_alignTop="@+id/urlEditText" />

</RelativeLayout>