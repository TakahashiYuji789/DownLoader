<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Top">


    <TextView
        android:id="@+id/Title01"
        android:layout_width="109dp"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/toggleButton"
        android:layout_alignParentStart="true"
        android:text="URLの入力"
        android:textSize="20sp" />

    <Button
        android:id="@+id/startButton"
        android:layout_width="130dp"
        android:layout_height="65dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:onClick="onClick"
        android:text="画像を選択"
        android:textSize="20sp" />

    <Button
        android:id="@+id/startButton2"
        android:layout_width="wrap_content"
        android:layout_height="72dp"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/toggleButton"
        android:onClick="onClick"
        android:text="ダウンロード開始"
        android:textSize="13sp" />

    <Button
        android:id="@+id/ViewImageButton"
        android:layout_width="126dp"
        android:layout_height="72dp"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/urlEditText"
        android:onClick="onClick"
        android:text="画像を描画"
        android:textSize="20sp" />

    <ImageView
        android:id="@+id/ImageViewer"
        android:layout_width="match_parent"
        android:layout_height="310dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="49dp" />

    <ToggleButton
        android:id="@+id/toggleButton"
        android:layout_width="127dp"
        android:layout_height="65dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:textOff="外部読み込み" />

    <ToggleButton
        android:id="@+id/toggleButton2"
        android:layout_width="127dp"
        android:layout_height="65dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textOff="新規保存" />

    <EditText
        android:id="@+id/editText"
        android:layout_width="254dp"
        android:layout_height="61dp"
        android:layout_alignBaseline="@+id/startButton2"
        android:layout_alignParentStart="true"
        android:ems="10"
        android:hint="画像名を登録してください"
        android:inputType="textPersonName" />

</RelativeLayout>